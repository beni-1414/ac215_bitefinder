{
  "displayName": "bitefinder-vlmodel-training",
  "jobSpec": {
    "workerPoolSpecs": [
      {
        "machineSpec": {
          "machineType": "e2-standard-4"
        },
        "replicaCount": 1,
        "pythonPackageSpec": {
          "executorImageUri": "us-docker.pkg.dev/vertex-ai/training/pytorch-cpu.1-13:latest",
          "packageUris": [
            "gs://bitefinder-data/vlmodel_trainer.tar.gz"
          ],
          "pythonModule": "trainer.task",
          "args": [
            "--model=clip",
            "--epochs=10",
            "--batch_size=32",
            "--labels=texts_v2.json",
            "--lr=0.0001",
            "--gcp",
            "--verbose"
          ],
          "env": [
            {
              "name": "GCP_PROJECT",
              "value": "bitefinder-474614"
            },
            {
              "name": "GCP_BUCKET_NAME",
              "value": "gs://bitefinder-data"
            }
          ]
        }
      }
    ]
  }
}
